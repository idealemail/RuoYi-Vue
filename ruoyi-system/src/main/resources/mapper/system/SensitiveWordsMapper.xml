<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SensitiveWordsMapper">

    <resultMap type="SensitiveWords" id="SensitiveWordsResult">
        <result property="id"    column="id"    />
        <result property="word"    column="word"    />
        <result property="category"    column="category"    />
        <result property="level"    column="level"    />
        <result property="expiry"    column="expiry"    />
        <result property="addedBy"    column="added_by"    />
        <result property="isActive"    column="is_active"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
    </resultMap>

    <sql id="selectSensitiveWordsVo">
        select id, word, category, level, expiry, added_by, is_active, created_at, updated_at from sensitive_words
    </sql>

    <select id="selectSensitiveWordsList" parameterType="SensitiveWords" resultMap="SensitiveWordsResult">
        <include refid="selectSensitiveWordsVo"/>
        <where>
            <if test="word != null  and word != ''"> and word = #{word}</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="level != null "> and level = #{level}</if>
            <if test="expiry != null "> and expiry = #{expiry}</if>
            <if test="addedBy != null  and addedBy != ''"> and added_by = #{addedBy}</if>
            <if test="isActive != null "> and is_active = #{isActive}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
        </where>
    </select>

    <select id="selectSensitiveWordsById" parameterType="String" resultMap="SensitiveWordsResult">
        <include refid="selectSensitiveWordsVo"/>
        where id = #{id}
    </select>

    <insert id="insertSensitiveWords" parameterType="SensitiveWords" useGeneratedKeys="true" keyProperty="id">
        insert into sensitive_words
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="word != null and word != ''">word,</if>
            <if test="category != null and category != ''">category,</if>
            <if test="level != null">level,</if>
            <if test="expiry != null">expiry,</if>
            <if test="addedBy != null and addedBy != ''">added_by,</if>
            <if test="isActive != null">is_active,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="word != null and word != ''">#{word},</if>
            <if test="category != null and category != ''">#{category},</if>
            <if test="level != null">#{level},</if>
            <if test="expiry != null">#{expiry},</if>
            <if test="addedBy != null and addedBy != ''">#{addedBy},</if>
            <if test="isActive != null">#{isActive},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
        </trim>
    </insert>

    <update id="updateSensitiveWords" parameterType="SensitiveWords">
        update sensitive_words
        <trim prefix="SET" suffixOverrides=",">
            <if test="word != null and word != ''">word = #{word},</if>
            <if test="category != null and category != ''">category = #{category},</if>
            <if test="level != null">level = #{level},</if>
            <if test="expiry != null">expiry = #{expiry},</if>
            <if test="addedBy != null and addedBy != ''">added_by = #{addedBy},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSensitiveWordsById" parameterType="String">
        delete from sensitive_words where id = #{id}
    </delete>

    <delete id="deleteSensitiveWordsByIds" parameterType="String">
        delete from sensitive_words where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>